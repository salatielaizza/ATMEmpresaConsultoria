<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="atmempresaconsultoria.cursoandroid.com.atmempresaconsultoria.MainActivity"
    android:background="@android:color/background_light">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:id="@+id/logoID"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_empresa"
        android:layout_below="@+id/logoID"
        android:layout_alignLeft="@+id/logoID"
        android:layout_alignStart="@+id/logoID"
        android:layout_marginTop="49dp"
        android:id="@+id/menuEmpresaID" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_contato"
        android:layout_alignTop="@+id/menuEmpresaID"
        android:layout_alignRight="@+id/logoID"
        android:layout_alignEnd="@+id/logoID"
        android:id="@+id/menuContatoID" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_cliente"
        android:layout_below="@+id/menuEmpresaID"
        android:layout_alignLeft="@+id/menuEmpresaID"
        android:layout_alignStart="@+id/menuEmpresaID"
        android:layout_marginTop="31dp"
        android:id="@+id/menuCLienteID" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/menu_servico"
        android:layout_alignTop="@+id/menuCLienteID"
        android:layout_alignLeft="@+id/menuContatoID"
        android:layout_alignStart="@+id/menuContatoID"
        android:id="@+id/menuServicosID" />

</RelativeLayout>
